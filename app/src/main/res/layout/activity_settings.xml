<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedometer Settings"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/sensorStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step sensor: unknown"
            android:textColor="#CCCCCC"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step multiplier"
            android:textColor="#FFFFFF"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1×"
                android:onClick="setMultiplier1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2×"
                android:onClick="setMultiplier2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3×"
                android:onClick="setMultiplier3"/>
        </LinearLayout>

        <TextView
            android:id="@+id/multiplierStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current multiplier: 1×"
            android:textColor="#CCCCCC"
            android:paddingTop="8dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset steps"
            android:paddingTop="12dp"
            android:onClick="resetSteps"/>

        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps reset on next 'read' of hardware counter status"
            android:textColor="#FFB74D"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This app uses the hardware step counter. Some watches stop counting when the screen is off. This is a hardware limitation and cannot be overridden by apps."
            android:textColor="#888888"
            android:paddingBottom="16dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open App Battery Settings"
            android:onClick="openAppSettings"/>

    </LinearLayout>
</ScrollView>
